<div id="fullscreen_bg" class="fullscreen_bg"/>
<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { multipart: true }) do |f| %>
  <h1 class="form-signin-heading text-muted"><%= t('.sign_up', :default => "Sign up") %></h1>
	<%= devise_error_messages! %>
  <%= f.email_field :email, :class => 'form-control', :placeholder => "Email" ,required: "", autofocus: true %>
	<%= f.password_field :password, autocomplete: "off", :class => 'form-control', :placeholder => "#{t 'password'}" ,required: "", autofocus: "" %>
  <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control', :placeholder => "#{t 'password_confirmation'}" ,required: "", autofocus: "" %>
  <%= f.file_field :avatar %>
  <% if devise_mapping.rememberable? -%>
    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
  <% end -%>
	<%= f.submit t('.sign_up', :default => "Sign up"), class: "btn btn-lg btn-primary btn-block" %>
<% end %>


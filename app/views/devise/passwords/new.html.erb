<div class="row">
  <div class="col-md-4">
    <h2><%= t('.forgot_your_password', :default => 'Forgot your password?') %></h2>
    <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), class: "form-horizontal", :html => { :method => :post }) do |f| %>
      <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :email %><br />
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
      <div><%= f.submit t('.send_me_reset_password_instructions', :default => "Send me reset password instructions"), class: 'btn btn-primary' %></div>
    <% end %>
    <%= render "devise/shared/links" %>
  </div>
</div>